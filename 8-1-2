package work;
import java.util.Scanner;
public class WK8_2_1 {
	public static void main(String[] args) {
		int score;
		int sum=0;
		double avg=0.0;
		Scanner input=new Scanner(System.in);
		for(int i=0;i<10;i++){
		System.out.print("请输入10名学生成绩中第"+(i+1)+"名同学的成绩");
		score=input.nextInt();
		sum=sum+score;
		}
	avg=sum/10;
	System.out.print("平均分是"+avg);
	}
}
